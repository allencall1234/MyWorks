<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="21dp"
        android:background="#DBDBDB"/>
    
    <TextView
        android:id="@+id/tv_title" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:text="标    题 : 测试.doc"
        android:textSize="15sp"
        android:textColor="#919191"/>
    
    <TextView 
        android:id="@+id/tv_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:text="关键词 : 测试.doc"
        android:textSize="15sp"
        android:textColor="#919191"/>
    
    <TextView
        android:id="@+id/tv_type" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:text="类    型 : 测试.doc"
        android:textSize="15sp"
        android:textColor="#919191"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="内    容 : "
        android:textSize="15sp"
        android:textColor="#919191"/>
    
    <TextView 
        android:id="@+id/tv_describtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:text="    张健伟是山东荣成人，本月将满58岁。1983年7月自厦门大学哲学系毕业。先在原轻工业部下属轻工业发展战略研究中心任办公室副主任，之后调任中共中央办公厅，先后任中办秘书局督促检查处副处长、会议处调研员、副处长(副局级)，以及中办秘书局副局长(正局级)，之后其离开中办，调任国家质检总局办公厅副主任(正局级、主持工作)。2005年12月，任国家标准化管理委员会副主任、党组成员。"
        android:textSize="18sp"
        android:textColor="#707070"/>
    
    <!-- 附件 -->
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal" >
          
       <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/attachment"
	        android:text="@string/fujian"
	        android:textSize="15sp"/>

          <TextView
              android:id="@+id/tv_attachmentNname"
              android:layout_width="242dp"
              android:layout_height="27dp"
              android:layout_marginLeft="5dp"
              android:background="#01AE5A"
              android:ellipsize="end"
              android:gravity="center"
              android:singleLine="true"
              android:text="@string/fujian"
              android:textColor="#EBFFF4"
              android:textSize="15sp" />

         <!-- <Button
              android:id="@+id/btn_download"
              android:layout_width="60dp"
              android:layout_height="35dp"
              android:layout_marginTop="3dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="10dp"
              android:background="@drawable/download" /> -->
      </LinearLayout>

      <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#DBDBDB"/>
    
</LinearLayout>
