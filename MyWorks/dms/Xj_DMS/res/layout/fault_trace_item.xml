<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/fault_trace_image"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/happen_location" />

    <TextView
        android:id="@+id/tv_taskType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/fault_trace_image"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="位置 ：JZ25-1CEP"
        android:textColor="#646464"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_taskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_taskType"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/task_query"
        android:drawablePadding="3dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
        android:textColor="#323232"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_taskState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/origin_ellipse_bg"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="11sp"
        android:text="已修复"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_taskTitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="2015-10-22"
        android:textColor="#646464"
        android:textSize="11sp" />

</RelativeLayout>