<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/knowledgebase_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="电网知识库标题？" 
        android:textColor="@color/tv_font_color"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/knowledgebase_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/knowledgebase_title"
        android:layout_margin="5dp"
        android:text="所属类型：故障支持知识库"
        android:textColor="@color/tv_font_color"
        android:textSize="12sp" 
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/knowledgebase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/knowledgebase_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="发布时间：2015-9-5"
        android:textColor="#909090"
        android:textSize="10sp" 
        android:paddingBottom="10dp"
        />

    <Button
        android:id="@+id/support_list_news_tips"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/news_btn_bg"
        android:text="NEWS"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>