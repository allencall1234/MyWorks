<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fault_detail_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_view" />

    <ScrollView
        android:id="@+id/finish_fault_detail_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/finish_scrollView_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/finish_tv_originator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/tv_font_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_tv_faultClassify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/tv_font_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_tv_faultType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/tv_font_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_tv_belongto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/tv_font_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_tv_runWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/tv_font_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_tv_support_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/tv_font_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_tv_support_expert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/tv_font_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/finish_tv_fault_treatment_measures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="故障简述："
                    android:textColor="@color/tv_font_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/finish_tv_treatment_measures_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="false"
                    android:textColor="@color/tv_font_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/finish_tv_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="附件："
                    android:textColor="@color/tv_font_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/finish_btn_attachment_name"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:background="@color/blue"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="附件名称"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/finish_btn_download_attachment"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/download" />
                </LinearLayout>

                <TextView
                    android:id="@+id/finish_tv_dm_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="断面截图："
                    android:textColor="@color/tv_font_color"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/finish_btn_dm_attachment_name"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:background="@color/blue"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="附件名称"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/finish_btn_dm_download_attachment"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/download"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/finish_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#909090"
                    android:textSize="10sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c0c0c0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="厂家/专家评议"
                    android:textColor="#323232"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c0c0c0" />
            </LinearLayout>

            <com.xj.cnooc.common.MyListView
                android:id="@+id/pingyiListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000" >
            </com.xj.cnooc.common.MyListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>