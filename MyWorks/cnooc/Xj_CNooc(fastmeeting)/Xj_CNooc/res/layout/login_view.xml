<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:focusable="true"  
    android:focusableInTouchMode="true">
    
    <ImageView
        android:id="@+id/iv_head" 
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/login_head_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    
    <LinearLayout 
        android:id="@+id/linlayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/iv_head"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/login_edittext_user"
        android:orientation="horizontal">
        
        <ImageView 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/login_user"/>
        
        <!-- <View 
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray"/> -->
    
	    <EditText
	        android:id="@+id/et_username" 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingLeft="10dp"
	        android:layout_marginLeft="16dp"
	        android:singleLine="true"
	        android:hint="@string/login_et_username"
	        android:background="@null"
	        android:textSize="20sp"/> 
        
    </LinearLayout>
    
    <LinearLayout 
       android:id="@+id/linlayout2"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_below="@id/linlayout1"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:gravity="center"
       android:background="@drawable/login_edittext_pass"
       android:orientation="horizontal">
	    
        <ImageView 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="52dp"
            android:src="@drawable/login_password"/>
        
        <!-- <View 
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray"/> -->
    
	    <EditText
	        android:id="@+id/et_password" 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingLeft="10dp"
	        android:layout_marginLeft="17dp"
	        android:singleLine="true"
	        android:hint="@string/login_et_password"
	        android:inputType="textPassword"
	        android:textSize="20sp"
	        android:background="@null"/>
	    
	    <ImageView
	        android:id="@+id/iv_show_hidden_pass" 
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_marginRight="45dp"
	        android:src="@drawable/hidden_pass"/>
    
     </LinearLayout>
        
    <Button
        android:id="@+id/btn_login" 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/linlayout2"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login_bg"/>
    

</RelativeLayout>
