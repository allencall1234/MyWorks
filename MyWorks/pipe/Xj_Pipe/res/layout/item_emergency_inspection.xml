<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/et_describe_bg">
    
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前任务 : 软件园二期"
        android:textSize="@dimen/textsize_middle"
        android:textColor="#D6E6F7"/>
    
    <TextView 
	    android:id="@+id/tv_inspectionState"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:text="未巡检"
	    android:textSize="@dimen/tv_small_size"
	    android:textColor="@color/white"
	    android:gravity="center"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/state0"/>
    
    <TextView 
        android:id="@+id/tv_inspectionLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="10dp"
        android:text="巡检线路 : 东区1#管线"
        android:textColor="#A0CCF7"
        android:textSize="13sp"/>
    
    <TextView 
        android:id="@+id/tv_inspectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_inspectionLine"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="时间区间 : 9:00-15:00"
        android:textColor="#9AC7F5"
        android:textSize="12sp"/>

</RelativeLayout>
