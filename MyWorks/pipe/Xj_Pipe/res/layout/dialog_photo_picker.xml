<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_view_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_bg"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="请选择照片"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_pickfrom_camera"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_btn_background"
        android:padding="10dp"
        android:text="照相"
        android:textColor="@drawable/menu_text_selector"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_pickfrom_gallery"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_btn_background"
        android:padding="10dp"
        android:text="从相册选取"
        android:textColor="@drawable/menu_text_selector"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dialog_view_cancel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_btn_background_single"
        android:focusable="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ccc" />

</LinearLayout>