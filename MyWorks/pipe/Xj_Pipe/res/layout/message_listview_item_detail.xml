<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/et_describe_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/send_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#D8E7F7"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/send_message_name"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/send_message_name"
            android:text="2015-12-14 11:12"
            android:textColor="#A4CFF9"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_message_name"
            android:layout_marginTop="10dp"
            android:text="发现管道出现重大故障，请速来！"
            android:textColor="#A4CFF9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_flag"
             android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/state0"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="未读"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_small_size" />
    </RelativeLayout>

</RelativeLayout>