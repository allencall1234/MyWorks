<?xml version="1.0" encoding="utf-8"?>
<!-- 提交任务巡检单 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >
    
    <EditText 
        android:id="@+id/et_inspection_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:gravity="top"
        android:layout_marginTop="30dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/et_describe_bg"
        android:textColorHint="@color/white"
        android:hint="针对本次巡检描述..."
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_middle"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="现场照片:"
        android:textSize="@dimen/textsize_middle"/>
    
	<com.xj_pipe.common.PhotoModule 
	    android:id="@+id/photo_module"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"/>
	    
	<Button
	    android:id="@+id/inspection_button_submit" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="提交任务"
	    android:textColor="#ffffff"
	    android:background="@drawable/inspect_function_toggle"
	    android:layout_marginTop="40dp"/>
</LinearLayout>
