<?xml version="1.0" encoding="utf-8"?>
<!-- 任务提交 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="#fff" >

    <TextView
        android:id="@+id/dialog_view_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|left"
        android:text="有未巡检点,是否提交？"
        android:textSize="18sp" />

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_below="@id/dialog_view_title"
        android:background="#0aa" />

    <EditText
        android:id="@+id/dialog_description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_view_title"
        android:layout_marginTop="1dp"
        android:gravity="left|top"
        android:hint="未巡检点原因说明..."
        android:minHeight="80dp"
        android:padding="5dp"
        android:background="@color/white"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_small" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_description" >

        <Button
            android:id="@+id/dialog_view_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_btn_background"
            android:focusable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="#a0a0a0" />

        <Button
            android:id="@+id/dialog_view_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_btn_background"
            android:focusable="true"
            android:gravity="center"
            android:text="提交"
            android:textColor="#0aa" />
    </LinearLayout>

</RelativeLayout>