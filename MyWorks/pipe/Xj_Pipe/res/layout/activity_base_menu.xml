<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/divider_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_qrcode"
            style="@style/menu_style"
            android:drawableLeft="@drawable/erweima"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:text="软件二维码    " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/divider_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_modify_code"
            style="@style/menu_style"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:text="密码修改        " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/divider_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_version"
            style="@style/menu_style"
            android:drawableLeft="@drawable/update"
            android:drawablePadding="10dp"
            android:text="版本更新        " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/divider_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_exit_user"
            style="@style/menu_style"
            android:drawableLeft="@drawable/exit_user"
            android:drawablePadding="10dp"
            android:text="退出用户登录" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_exit"
            style="@style/menu_style"
            android:drawableLeft="@drawable/exit_system"
            android:drawablePadding="10dp"
            android:text="退出系统        " />
    </LinearLayout>

</LinearLayout>